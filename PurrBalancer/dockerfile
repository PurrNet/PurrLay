# Build stage
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy solution file and project files first for better caching
COPY PurrLay.sln ./
COPY PurrBalancer/PurrBalancer.csproj ./PurrBalancer/
COPY PurrCommon/PurrCommon.csproj ./PurrCommon/
COPY PurrLay/PurrLay.csproj ./PurrLay/

# Restore dependencies
RUN dotnet restore PurrBalancer/PurrBalancer.csproj

# Copy all source code
COPY PurrBalancer/ ./PurrBalancer/
COPY PurrCommon/ ./PurrCommon/

# Build and publish the PurrBalancer project
RUN dotnet publish PurrBalancer/PurrBalancer.csproj -c Release -o /app --no-restore

# Runtime stage
FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app
COPY --from=build /app .

ENV HOST=+
ENV PORT=8080

EXPOSE ${PORT}

ENTRYPOINT ["dotnet", "PurrBalancer.dll"]
